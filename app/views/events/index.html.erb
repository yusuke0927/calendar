<p id="notice"><%= notice %></p>

<header>
   <div class="heading">
      <h1 class="title">
        <%= link_to "カレンダー", runnings_path %>
      </h1>
   </div>
   <div class="navbar">
           <% if user_signed_in? %>
               <ul class="nav-lists">
                  <li><h3><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :nav__btn %></h3></li>
                    <% else %>
                  <li><h3><%= link_to "新規登録", new_user_registration_path, class: :nav__botn %></h3></li>
                  <li><h3><%= link_to "ログイン", new_user_session_path, class: :nav__botn %></h3></li>
                </ul>
            <% end %>
        </div>
</header>

<% if user_signed_in? %>
    <table>
      <thead>
        <tr>
          <th>予定</th>
          <th>備考</th>
          <th>予定開始時間</th>
          <th>終了時間</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
         <% @events.each do |event| %>
           <tr>
             <td><%= event.title %></td>
             <td><%= event.body %></td>
             <td><%= event.start_date %></td>
             <td><%= event.end_date %></td>
             <td><%= link_to '編集', event %></td>
             <td><%= link_to '詳細', edit_event_path(event) %></td>
             <td><%= link_to '削除', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
           </tr>
         <% end %>
      </tbody>
    </table>
    <%= link_to 'New Event', new_event_path %>

    <%= link_to '運動の記録はこちらから', runnings_path %>
    
<% end %>

<br>


<div id="calendar"></div>